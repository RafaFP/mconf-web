= t('devise.mailer.confirmation_instructions.welcome', email: @email) 

%p
  - unless Site.current.require_registration_approval?
    = t('devise.mailer.confirmation_instructions.confirmation_ok')
    %p
      = link_to t('devise.mailer.confirmation_instructions.confirmation_link'), confirmation_url(@resource, confirmation_token: @token)

  - else
    = t('devise.mailer.confirmation_instructions.confirmation_pending')
