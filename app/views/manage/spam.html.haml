= render :partial => 'menu'

#manage
  .content-block
    .content-block-header
      %h3= t('.post.title')
    .content-block-middle
      - if @spam_posts.empty?
        = t('.no_spam')
      - else
        - for post in @spam_posts
          .spam-item
            .spam-buttons
              -# TODO: these actions should redirect to /manage/spam
              = link_to icon_confirm, space_post_path(post.space, post, :post => { :spam => false }), options_for_tooltip(t('.post.not_spam_tooltip'), :method => :put, :data => { :confirm => t('.post.not_spam_confirmation') })
              = link_to icon_delete, space_post_path(post.space, post), options_for_tooltip(t('.post.not_spam_tooltip'), :method => :delete, :data => { :confirm => t('.post.delete_confirmation') })
            .spam-body
              = render :partial => 'posts/unified_post' , :locals => { :thread => post }
