= simple_form_for [@event, @participant], html: { class: "single-column" } do |f|
  .form-inputs
    - if current_user.present?
      = f.input :email, readonly: current_user.present?, autofocus: true, input_html: { value: current_user.try(:email) }
    - else
      = f.input :email, autofocus: true
  = f.button :submit, t(".submit"), :class => "btn btn-primary"
