= render_page_title t(".title", :name => @room.name).html_safe

= render :partial => "invite_header", :locals => { :page => 1 }

#webconf-room-userid

  .primary-box.form-area
    %h3= t(".member.title")

    .form-area-content
      - if current_site.shib_enabled?
        .shibboleth-container
          = link_to shibboleth_path do
            = image_tag "rnp/cafe.png", size: "267x100", class: "sign-in-cafe"
            %div= t(".member.shibboleth.click_here")

      %h3= t(".member.non_federated_title")
      = simple_form_for "user", :url => user_session_path, :html => { :class => 'form-inline single-column' } do |f|
        = f.input :login, :label => t('.member.email_or_username'), :required => true
        = f.input :password, :label => t('.member.password'), :required => true
        = f.button :wrapped, :value => t(".login")

  .secondary-box.form-area
    %h3= t(".non_member.title_short")

    .form-area-content
      %h4= t(".non_member.title")
      = simple_form_for @room, :url => invite_bigbluebutton_room_path(@room), :method => "get" do |f|
        .input
          %label= t(".non_member.name")
          = text_field_tag "user[name]", "", :required => true
        = f.button :wrapped, :value => t(".non_member.next")
