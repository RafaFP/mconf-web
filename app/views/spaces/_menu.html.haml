- if @space && @space.id != nil
  - if can?(:read, @space)
    = content_for :page_menu do
      %ul
        %li{ spaces_menu_select_if(:home) }
          = link_to t('home.one').capitalize, space_path(@space)
        %li{ spaces_menu_select_if(:webconference) }
          = link_to t('webconference.one').capitalize, webconference_space_path(@space)
        %li{ spaces_menu_select_if(:posts) }
          = link_to t('post.wall').capitalize, space_posts_path(@space)
        %li{ spaces_menu_select_if(:events) }
          = link_to t('event.other').capitalize, space_events_path(@space)
        %li{ spaces_menu_select_if(:users) }
          = link_to t('people').capitalize, space_users_path(@space)
        - if @space.repository?
          %li{ spaces_menu_select_if(:repository) }
            = link_to t('repository.one').capitalize, space_attachments_path(@space)
        - if user_signed_in?
          - if can?(:edit, @space)
            %li{ spaces_menu_select_if(:admin) }
              = link_to t('admin.one').capitalize, edit_space_path(@space), :class => "admin danger-text"
