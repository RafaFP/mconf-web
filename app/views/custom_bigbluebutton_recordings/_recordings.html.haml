%table.recording-table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th= t('.table.recordid')
      %th= t('.table.server')
      %th= t('.table.room')
      %th= t('.table.links')
  %tbody
    - recordings.each do |recording|
      %tr
        %td= link_to recording.recordid, bigbluebutton_recording_path(recording)
        %td
          - unless recording.server.nil?
            = link_to recording.server.name, bigbluebutton_server_path(recording.server)
        %td
          - unless recording.room.nil?
            = link_to recording.room.name, bigbluebutton_room_path(recording.room)
        %td
          %ul.access-links
            %li= link_to t('_other.edit'), edit_bigbluebutton_recording_path(recording), :class => "btn btn-mini"
